<% if object.errors.any? %>
  <div id = "error_explanation">
    <div class="alert alert-danger" role="alert">
      A operação apresentou <%= pluralize(object.errors.count, "erros") %>.
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>